<% if @user.errors.any? %>
<h2>The following errors prevented </h2>
<ul>
	<% @user.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<%end%>
</ul>
<%end%>

<%=form_for @user do |f|%>

<p>
	<%= f.label :username %><br/>
	<%= f.text_field :username, placeholder: "Enter your username"%><br/>

</p>


<p>
	<%= f.label :email%><br/>
	<%= f.email_field :email, placeholder: "Enter your email id"%><br/>

</p>

<p>
	<%= f.label :password%><br/>
	<%= f.password_field :password, placeholder: "Enter your password"%><br/>
</p>

<p>
	<%= f.label :confirmation_password%><br/>
	<%= f.password_field :password_digest, placeholder: "Enter your password"%><br/>
</p>


<P>

	<%= f.submit%>
</P>

<%end%>